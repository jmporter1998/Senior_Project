<!DOCTYPE html>
<html lang="en">
<head >
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wiki</title>
</head>
<body>
    <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <!-- Container wrapper -->
            <div class="container-fluid">
              <!-- Toggle button -->
              <button
                class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <i class="fas fa-bars"></i>
              </button>
          
              <!-- Collapsible wrapper -->
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Navbar brand -->
                <a>
                  <img
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQcEWJqZ5BQhiUq_Ru3KUYefsa_0DP-vDWvzg&usqp=CAU"
                    height="60"
                    alt="Bonfire"
                    loading="lazy"
                  />
                </a>
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/weaponArticles/weapons">Weapons</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/npcArticles/npcs">NPCs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/armourArticles/armours">Armour</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/enemyArticles/enemies">Enemies</a>
                  </li>
                </ul>
                <!-- Left links -->
              </div>
              <!-- Collapsible wrapper -->
            </div>
            <!-- Container wrapper -->
          </nav>
          <!-- Navbar -->

        <h1 class="mb-4" style="text-align: center;">Weapon Pages</h1>
        <a href="/weaponArticles/newWeapon" class="btn btn-success">New Weapon Page</a>
        
        
        <% weaponArticles.forEach(weaponArticle => { %>
            <div class="card mt-4">
                <div class="row " style="border: none; padding-bottom: 15px;">
                    <div class="row col-md-2 boxlayout "  >
                        <img src="<%= weaponArticle.picture %>" alt="..." height="250">
                    </div>
                    <div class="row col-md-10 boxlayout "  >
                        <h4 class="card-title"><%= weaponArticle.title %></h4>
                        <div class="card-subtitle text-muted mb-2" ><%= weaponArticle.createdAt.toLocaleDateString() %></div>
                        <div class="card-text mb-2" ><%= weaponArticle.description %></div>
                        <a href="weapons/<%= weaponArticle.slug %>" class="btn btn-primary" style="width: 150px; height: 40px;">Read Page</a>
                    </div>
                </div>
                
            </div>
        <% }) %>
        
        


    </div>
</body>
</html>